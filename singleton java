public class LazySingletonDemo {

    public static void main(String[] args) {

        LazySingleton obj1 = LazySingleton.getInstance();
        LazySingleton obj2 = LazySingleton.getInstance();

        System.out.println("Are both objects same? " + (obj1 == obj2));

        obj1.showMessage();
    }
}

class LazySingleton {

    // Step 1: Declare static instance (not initialized yet)
    private static LazySingleton instance;

    // Step 2: Private constructor prevents external object creation
    private LazySingleton() {}

    // Step 3: Create instance only when needed (Lazy)
    public static LazySingleton getInstance() {
        if (instance == null) {
            instance = new LazySingleton();
        }
        return instance;
    }

    public void showMessage() {
        System.out.println("Lazy Initialization Singleton Instance");
    }
}